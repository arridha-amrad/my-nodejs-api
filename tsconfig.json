{
  "compilerOptions": {
    "baseUrl": "./", // Base directory for resolving paths
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*", "tests"],
  "exclude": ["node_modules"]
}
